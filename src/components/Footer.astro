---
const today = new Date();
---

<footer class="site-footer">
  <div class="footer-content">
    <p class="copyright">&copy; {today.getFullYear()}
      <b>
        <a href="https://irtaza.xyz">Irtaza</a>.
      </b>
    </p>
    <div class="social-links">
      <a href="https://github.com/Irtaza2009" target="_blank" aria-label="GitHub">
        <i class="fab fa-github"></i>
      </a>
      <a href="https://www.linkedin.com/in/syed-muhammad-irtaza-naqvi-5b627422a/" target="_blank" aria-label="LinkedIn">
        <i class="fab fa-linkedin"></i>
      </a>
      <a href="https://www.instagram.com/irtaza_2009/" target="_blank" aria-label="Instagram">
        <i class="fab fa-instagram"></i>
      </a>
      <a href="mailto:irtazanaqvi05@gmail.com" target="_blank" aria-label="Email">
        <i class="far fa-envelope"></i>
      </a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid var(--card-bg-color);
    margin-top: 4rem;
    padding: 0.5rem;
  }

  .footer-content {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    align-items: center;
    gap: 2rem;
  }

  .footer-content a {
    color: var(--link-color);
    text-decoration: none;
    transition: text-decoration 0.3s ease;
  }

  .footer-content a:hover {
    text-decoration: underline;
  }

  .copyright {
    margin: 0;
    color: var(--text-color);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: var(--text-color);
    font-size: 1.5rem;
    transition: color 0.3s ease;
    padding: 0.5rem;
  }

  .social-links a:hover {
    color: var(--link-color);
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .social-links {
      gap: 1.5rem;
    }

    .social-links a {
      font-size: 1.25rem;
    }
  }
</style>