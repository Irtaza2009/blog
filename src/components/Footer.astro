---
const today = new Date();
---

<footer class="site-footer">
  <div class="footer-content">
    <p class="copyright">&copy; {today.getFullYear()} <b>Irtaza</b>. All rights reserved.</p>
    <div class="social-links">
      <a href="https://github.com/Irtaza2009" target="_blank" aria-label="GitHub">
        <i class="fab fa-github"></i>
      </a>
      <a href="https://instagram.com/irtaza_2009" target="_blank" aria-label="Instagram">
        <i class="fab fa-instagram"></i>
      </a>
      <a href="https://medium.com/@irtazanaqvi05" target="_blank" aria-label="Medium">
        <i class="fab fa-medium"></i>
      </a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--card-bg-color);
    border-top: 1px solid var(--text-color);
    margin-top: 4rem;
    padding: 2rem 1rem;
  }

  .footer-content {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .copyright {
    margin: 0;
    color: var(--text-color);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: var(--text-color);
    font-size: 1.5rem;
    transition: color 0.3s ease;
    padding: 0.5rem;
  }

  .social-links a:hover {
    color: var(--link-color);
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .social-links {
      gap: 1.5rem;
    }

    .social-links a {
      font-size: 1.25rem;
    }
  }
</style>