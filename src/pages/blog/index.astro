---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

// Get all blog posts and sort by date
const posts = await getCollection('blog');
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <section class="blog-section">
      <h2 class="section-title">Blog</h2>
    </section>

    <main class="blog-homepage">
      <div class="blog-list">
        {sortedPosts.map((post) => (
          <article class="blog-card">
            <div class="card-layout">
              {post.data.heroImage && (
                <div class="image-container">
                  <img 
                    src={post.data.heroImage.src} 
                    alt={post.data.title}
                    class="post-image"
                    loading="lazy"
                    width={post.data.heroImage.width}
                    height={post.data.heroImage.height}
                  />
                </div>
              )}
              <div class="card-content">
                <h2 class="post-title">
                  <a href={`/blog/${post.id}/`}>
                    {post.data.title}
                  </a>
                </h2>
                {post.data.description && (
                  <p class="post-excerpt">{post.data.description}</p>
                )}
                <div class="post-meta">
                  <span class="post-date">
                    <FormattedDate date={post.data.pubDate} />
                  </span>
                  {post.data.tags && (
                    <div class="post-tags">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="empty-state">
          <h2>No posts yet</h2>
          <p>Check back soon for new content!</p>
        </div>
      )}
    </main>
    <Footer />
  </body>
</html>

<style>
  .blog-section {
    text-align: center;
    margin-bottom: 3rem;
    padding-top: 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    margin: 0;
    color: var(--text-color);
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--link-color);
    border-radius: 2px;
  }

  .blog-homepage {
    padding-top: 1rem;
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .blog-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
    align-items: center;
  }

  .blog-card {
    background: var(--card-bg-color);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    border: 1px solid transparent;
    overflow: hidden;
    max-height: 160px;
    max-width: 600px;
    width: 100%;
  }

  .blog-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    border-color: var(--link-color);
  }

  .card-layout {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 0;
    height: 160px;
  }

  .image-container {
    overflow: hidden;
    position: relative;
    height: 100%;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
  }

  .post-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--link-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .post-title a:hover {
    color: var(--bg-color);
	background-color: var(--link-color);
  }

  .post-excerpt {
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.4;
    margin: 0 0 0.75rem 0;
    font-size: 0.9rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
  }

  .post-date {
    font-size: 0.8rem;
    opacity: 0.7;
    color: var(--text-color);
    white-space: nowrap;
  }

  .post-tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--overlay-bg-color);
    padding: 0.2rem 0.6rem;
    border-radius: 0.75rem;
    font-size: 0.75rem;
    color: var(--text-color);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    opacity: 0.7;
  }

  .empty-state h2 {
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .blog-section {
      margin-bottom: 2rem;
      padding-top: 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .blog-homepage {
      padding: 1rem;
    }

    .blog-card {
      max-height: 140px;
      max-width: 100%;
    }

    .card-layout {
      grid-template-columns: 120px 1fr;
      height: 140px;
    }

    .card-content {
      padding: 1rem;
    }

    .post-title {
      font-size: 1.1rem;
      margin-bottom: 0.4rem;
    }

    .post-excerpt {
      font-size: 0.85rem;
      margin-bottom: 0.5rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }

    .post-date {
      font-size: 0.75rem;
    }

    .tag {
      font-size: 0.7rem;
      padding: 0.15rem 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 1.75rem;
    }

    .blog-card {
      max-height: 120px;
    }

    .card-layout {
      grid-template-columns: 100px 1fr;
      height: 120px;
    }

    .card-content {
      padding: 0.75rem;
    }

    .post-title {
      font-size: 1rem;
    }

    .post-excerpt {
      font-size: 0.8rem;
      -webkit-line-clamp: 1;
    }

    .post-meta {
      gap: 0.2rem;
    }
  }
</style>