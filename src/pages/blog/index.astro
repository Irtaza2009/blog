---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

// Get all blog posts and sort by date
const posts = await getCollection('blog');
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="blog-homepage">
      <div class="blog-grid">
        {sortedPosts.map((post, index) => (
          <article class={`blog-card ${index === 0 ? 'featured' : ''}`}>
            {post.data.heroImage && (
				<img 
					src={post.data.heroImage.src} 
					alt={post.data.title}
					class="post-image"
					loading={index === 0 ? "eager" : "lazy"}
					width={post.data.heroImage.width}
					height={post.data.heroImage.height}
				/>
			)}
            <div class="card-content">
              <h2>
                <a href={`/blog/${post.id}/`} class="post-title">
                  {post.data.title}
                </a>
              </h2>
              <div class="post-meta">
                <span class="post-date">
                  <FormattedDate date={post.data.pubDate} />
                </span>
                {post.data.tags && (
                  <div class="post-tags">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
              {post.data.description && (
                <p class="post-excerpt">{post.data.description}</p>
              )}
            </div>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="empty-state">
          <h2>No posts yet</h2>
          <p>Check back soon for new content!</p>
        </div>
      )}
    </main>
    <Footer />
  </body>
</html>

<style>
  .blog-homepage {
    padding-top: 1rem;
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }

  .blog-card {
    background: var(--card-bg-color);
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid transparent;
    position: relative;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: var(--link-color);
  }

  .blog-card.featured {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card.featured .post-image {
    height: 300px;
  }

  .blog-card:hover .post-image {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .blog-card.featured .card-content {
    padding: 2rem;
  }

  .post-title {
    color: var(--text-color);
    text-decoration: none;
    font-size: 1.4rem;
    line-height: 1.3;
    margin-bottom: 1rem;
    display: block;
  }

  .blog-card.featured .post-title {
    font-size: 2rem;
  }

  .post-title:hover {
    color: var(--link-color);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .post-date {
    font-size: 0.9rem;
    opacity: 0.7;
    white-space: nowrap;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--overlay-bg-color);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    color: var(--text-color);
  }

  .post-excerpt {
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    opacity: 0.7;
  }

  .empty-state h2 {
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .blog-card.featured {
      grid-template-columns: 1fr;
    }

    .blog-card.featured .post-title {
      font-size: 1.5rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .card-content {
      padding: 1rem;
    }
  }
</style>